<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 class="modal-title"><strong>Modifier un document</strong></h3>
</div>

{{ form_start(form, {'attr': {'class': 'form-horizontal', 'action': path('document_edit', {'type': app.user.type, 'id': documentId}) }}) }}

<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-7" style="margin-right:30px">
                <div class="form-group">
                    {{ form_row(form.titre, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    {{ form_row(form.category, {'attr': {'class':'select-select2', 'style':'width: 100%;'}}) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
    </div>

</div>

<div class="modal-footer">
    <div class="col-md-12">
        <div class="form-group pull-right">
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-effect-ripple btn-primary'}}) }}
            <button type="button" class="btn btn-effect-ripple btn-danger" data-dismiss="modal"
                    style="margin-left: 20px;">Annuler
            </button>
        </div>
    </div>
</div>

{{ form_rest(form) }}
{{ form_end(form) }}
