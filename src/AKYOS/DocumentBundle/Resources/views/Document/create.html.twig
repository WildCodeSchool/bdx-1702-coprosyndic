<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 class="modal-title"><strong>Ajouter un document</strong></h3>
</div>

{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal', 'action': path('document_create', {'type': app.user.type}) }}) }}

<div class="modal-body">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-7" style="margin-right:30px">
                <div class="form-group">
                    {{ form_row(form.titre, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    {{ form_row(form.category, {'attr': {'class':'select-select2 select-single', 'style':'width: 100%;'}}) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_row(form.file, {'attr':{'class':'filestyle inputfile','style':'position: absolute; clip: rect(0px 0px 0px 0px);','tabindex':'-1'}}) }}
                    <div class="bootstrap-filestyle input-group">
                        {#TODO : permettre de choisir le type de compte comme dans les messages#}
                        <input type="text" id="filename-box" class="form-control" disabled="">
                        <span class="group-span-filestyle input-group-btn" tabindex="0">
                            <label for="document_file" class="btn btn-info">
                                <span class="glyphicon fa fa-file-o"></span> Importer
                            </label>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-5" style="margin-right:30px">
                <div class="form-group">
                    {{ form_row(form.copropriete, {'attr': {'class':'select-select2 select-single', 'style':'width: 100%;'}}) }}
                </div>
            </div>
            <label class="csscheckbox csscheckbox-info" for="checkbox-all">Tout s√©lectionner
            <input type="checkbox" id="checkbox-all">
                <span></span>
            </label>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_row(form.lots, {'attr': {'class':'select-select2', 'style':'width: 100%;'}}) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_label(form.toLocataires) }}
                    <label class="switch switch-info">
                        {{ form_widget(form.toLocataires) }}<span></span>
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    <div class="col-md-12">
        <div class="form-group pull-right">
            {{ form_widget(form.submit, {'label': 'document.submit_create', 'attr': {'class': 'btn btn-effect-ripple btn-primary'}}) }}
            <button type="button" class="btn btn-effect-ripple btn-danger" data-dismiss="modal" style="margin-left: 20px;">Annuler</button>
        </div>
    </div>
</div>

{{ form_rest(form) }}
{{ form_end(form) }}

