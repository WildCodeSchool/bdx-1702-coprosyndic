{% extends '@AKYOSEasyCopro/BackOffice/Syndic/layout.html.twig' %}


{% block title %}
    Création COPROPRIETE
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/backoffice/syndic_dashboard.css') }}">

{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-lg-offset-3 col-lg-6 ">
            <div class="widget">
                <div class="widget-image widget-image-xs">
                    <img src="{{ asset('assets/img/city01.jpg') }}">
                    <div class="widget-image-content">
                        <h2 class="widget-heading text-light"><strong>CREER UNE COPROPRIETE</strong></h2>
                    </div>
                </div>
                <div class="widget-content">
                        {{ form_start(my_form) }}
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-user fa-fw" aria-hidden="true"></i></span>
                                    {{ form_widget(my_form.nom, { 'attr': {'class': 'form-control', 'placeholder':'Nom'}}) }}
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="input-group">
                                   <span class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></span>
                                   {{ form_widget(my_form.immatriculation, { 'attr': {'class': 'form-control', 'placeholder':'Immatriculation'}}) }}
                                </div>
                            </div>
                        </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-calendar fa-fw" aria-hidden="true"></i></span>
                                {{ form_widget(my_form.dateImmat, { 'attr': {'class': 'form-control', 'placeholder':'Date Immatriculation'}}) }}
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-calendar-check-o fa-fw" aria-hidden="true"></i></span>
                                {{ form_widget(my_form.dateModifImmat, { 'attr': {'class': 'form-control', 'placeholder':'Date Modification Immatriculation'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-home fa-fw" aria-hidden="true"></i></span>
                                {{ form_widget(my_form.adressePrinc, { 'attr': {'class': 'form-control', 'placeholder':'Adresse Principale'}}) }}
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-home fa-fw" aria-hidden="true"></i></span>
                                {{ form_widget(my_form.adresseSec, { 'attr': {'class': 'form-control', 'placeholder':'Adresse Secondaire'}}) }}
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-home fa-fw" aria-hidden="true"></i></span>
                                {{ form_widget(my_form.codePostal, { 'attr': {'class': 'form-control', 'placeholder':'Code Postal'}}) }}
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-home fa-fw" aria-hidden="true"></i></span>
                                {{ form_widget(my_form.ville, { 'attr': {'class': 'form-control', 'placeholder':'Ville'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-calendar-times-o fa-fw" aria-hidden="true"></i></span>
                                {{ form_widget(my_form.dateCreation, { 'attr': {'class': 'form-control', 'placeholder':'Date Création'}}) }}
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-calendar fa-fw" aria-hidden="true"></i></span>
                                {{ form_widget(my_form.dateDebutGestion, { 'attr': {'class': 'form-control', 'placeholder':'Date Début Gestion'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-square fa-fw" aria-hidden="true"></i></span>
                                {{ form_widget(my_form.parcelleCadastrale, { 'attr': {'class': 'form-control', 'placeholder':'Parcelle Cadastrale'}}) }}
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-home fa-fw" aria-hidden="true"></i></span>
                                {{ form_widget(my_form.nbBatiments, { 'attr': {'class': 'form-control', 'placeholder':'Nombre Bâtiments'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-home fa-fw" aria-hidden="true"></i></span>
                                {{ form_widget(my_form.periodeConstruction, { 'attr': {'class': 'form-control', 'placeholder':'Période Construction'}}) }}
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-home fa-fw" aria-hidden="true"></i></span>
                                {{ form_widget(my_form.nbLots, { 'attr': {'class': 'form-control', 'placeholder':'Nombre de Lots'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-home fa-fw" aria-hidden="true"></i></span>
                                {{ form_widget(my_form.typeChauffage, { 'attr': {'class': 'form-control', 'placeholder':'Type de Chauffage'}}) }}
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-home fa-fw" aria-hidden="true"></i></span>
                                {{ form_widget(my_form.nbAscenseurs, { 'attr': {'class': 'form-control', 'placeholder':'Nombre d\'Ascenseurs'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-home fa-fw" aria-hidden="true"></i></span>
                                {{ form_widget(my_form.dateReglement, { 'attr': {'class': 'form-control', 'placeholder':'Date de Réglement'}}) }}
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-home fa-fw" aria-hidden="true"></i></span>
                                {{ form_widget(my_form.syndic, { 'attr': {'class': 'form-control', 'placeholder':'Syndic'}}) }}
                            </div>
                        </div>
                    </div>


                            <div class="row text-center">
                                    <div class="col-sm-12 text-center">
                                        <div class="form-group">
                                            {{ form_widget(my_form.Enregistrer, { 'attr': {'class': 'btn btn-info'}}) }}
                                        </div>
                                    </div>

                                {{ form_errors(my_form) }}
                                {{ form_end(my_form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>






{% endblock %}

{% block scripts %}
{% endblock %}
