<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 class="modal-title"><strong>Créer une copropriété</strong></h3>
</div>

<div class="modal-body">
    {{ form_start(my_form, {'attr': {'action': path('syndic_create_copropriete'), 'class': 'form-horizontal' }}) }}

    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <div class="col-md-5">
                    {{ form_label(my_form.nom, 'Nom', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(my_form.nom) }}
                    {{ form_widget(my_form.nom, { 'attr': {'class': 'form-control', 'placeholder':'Nom de la copropriété'}}) }}
                </div>
                <div class="col-md-4">
                    {{ form_label(my_form.immatriculation, 'N° d\'immatriculation', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(my_form.immatriculation) }}
                    {{ form_widget(my_form.immatriculation, { 'attr': {'class': 'form-control', 'placeholder':'Numéro d\'immatriculation'}}) }}
                </div>
                <div class="col-md-3">
                    {{ form_label(my_form.dateImmat, 'Date d\'immatriculation', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(my_form.dateImmat) }}
                    {{ form_widget(my_form.dateImmat, { 'attr': {'class': 'form-control', 'placeholder':'Date d\'immatriculation'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    {{ form_label(my_form.adressePrinc, 'Adresse postale', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(my_form.adressePrinc) }}
                    {{ form_widget(my_form.adressePrinc, { 'attr': {'class': 'form-control', 'placeholder':'Adresse postale'}}) }}
                </div>
                <div class="col-md-3">
                    {{ form_label(my_form.adresseSec, 'Complément d\'adresse', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(my_form.adresseSec) }}
                    {{ form_widget(my_form.adresseSec, { 'attr': {'class': 'form-control', 'placeholder':'Complément d\'adresse'}}) }}
                </div>
                <div class="col-md-2">
                    {{ form_label(my_form.codePostal, 'Code postal', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(my_form.codePostal) }}
                    {{ form_widget(my_form.codePostal, { 'attr': {'class': 'form-control', 'placeholder':'Code postal'}}) }}
                </div>
                <div class="col-md-3">
                    {{ form_label(my_form.ville, 'Ville', {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_errors(my_form.ville) }}
                    {{ form_widget(my_form.ville, { 'attr': {'class': 'form-control', 'placeholder':'Ville'}}) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="collapse" id="collapseSecondaire">
            <div class="col-sm-12">
                <div class="form-group">
                    <div class="col-md-3">
                        {{ form_label(my_form.dateDebutGestion, 'Début de gestion', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(my_form.dateDebutGestion) }}
                        {{ form_widget(my_form.dateDebutGestion, { 'attr': {'class': 'form-control', 'placeholder':'Début de gestion'}}) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_label(my_form.parcelleCadastrale, 'Parcelle(s) cadastrale', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(my_form.parcelleCadastrale) }}
                        {{ form_widget(my_form.parcelleCadastrale, { 'attr': {'class': 'form-control', 'placeholder':'Parcelle(s) cadastrale'}}) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_label(my_form.nbBatiments, 'Nombre de bâtiments', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(my_form.nbBatiments) }}
                        {{ form_widget(my_form.nbBatiments, { 'attr': {'class': 'form-control', 'placeholder':'Nombre de bâtiments'}}) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_label(my_form.nbAscenseurs, 'Nombre d\'ascenceurs', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(my_form.nbAscenseurs) }}
                        {{ form_widget(my_form.nbAscenseurs, { 'attr': {'class': 'form-control', 'placeholder':'Nombre d\'ascenceurs'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        {{ form_label(my_form.periodeConstruction, 'Période de construction', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(my_form.periodeConstruction) }}
                        {{ form_widget(my_form.periodeConstruction, { 'attr': {'class': 'form-control', 'placeholder':'Période de construction'}}) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_label(my_form.typeChauffage, 'Type de chauffage', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(my_form.typeChauffage) }}
                        {{ form_widget(my_form.typeChauffage, { 'attr': {'class': 'form-control', 'placeholder':'Type de chauffage'}}) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_label(my_form.dateReglement, 'Etablissement du réglement intérieur', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_errors(my_form.dateReglement) }}
                        {{ form_widget(my_form.dateReglement, { 'attr': {'class': 'form-control', 'placeholder':'Etablissement du réglement intérieur'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        {{ form_row(my_form.illustrationFile, {'attr':{'class':'filestyle inputfile','style':'position: absolute; clip: rect(0px 0px 0px 0px);','tabindex':'-1'}}) }}
                        <div class="bootstrap-filestyle input-group">
                            <input type="text" id="filename-box" class="form-control" disabled="">
                            <span class="group-span-filestyle input-group-btn" tabindex="0">
                                    <label for="create_copropriete_illustration_file" class="btn btn-info">
                                        <span class="glyphicon fa fa-file-o"></span> Importer
                                    </label>
                                </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12">
            <a role="button" data-toggle="collapse" href="#collapseSecondaire" aria-expanded="false" aria-controls="collapseSecondaire">
                <i class="fa fa-plus-circle" aria-hidden="true"></i> Ajoutez des informations complémentaires
            </a>
        </div>
    </div>

</div>

<div class="modal-footer">
    <div class="col-md-12">
        <div class="form-group pull-right">
            {{ form_widget(my_form.submit, {'attr': {'class': 'btn btn-effect-ripple btn-primary'}}) }}
            <button type="button" class="btn btn-effect-ripple btn-danger" data-dismiss="modal"
                    style="margin-left: 20px;">Annuler
            </button>
        </div>
    </div>
</div>

{{ form_rest(my_form) }}
{{ form_errors(my_form) }}
{{ form_end(my_form) }}

