{% extends '@AKYOSEasyCopro/BackOffice/Syndic/layout.html.twig' %}

{% block title %}
    Gestion des copropriétaires
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block titre_page %}
    Gestion des copropriétaires
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('syndic_index') }}">Dashboard</a></li>
    <li class="active">Mes copropriétaires</li>
{% endblock %}

{% block content %}

    <h4>Liste des copropriétaires :</h4>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Membre du Conseil</th>
            </tr>
        </thead>
        <tbody>
        {% for coproprietaire in coproprietaires %}
            <tr>
                <td><a href="{{ path('syndic_show_coproprietaire', {'id': coproprietaire.id}) }}">{{ coproprietaire.id }}</a></td>
                <td>{{ coproprietaire.nom }}</td>
                <td>{{ coproprietaire.email }}</td>
                <td>{{ coproprietaire.membreConseil }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block scripts %}
{% endblock %}
