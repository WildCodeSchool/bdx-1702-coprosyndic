{% extends '@AKYOSEasyCopro/BackOffice/Syndic/layout.html.twig' %}

{% block title %}
    Affichage d'un copropriétaire
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block titre_page %}
    Affichage d'un copropriétaire
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('syndic_index') }}">Dashboard</a></li>
    <li><a href="{{ path('syndic_list_coproprietaires') }}">Mes copropriétaires</a></li>
    <li class="active">{{ coproprietaire.prenom ~ ' ' ~ coproprietaire.nom }}</li>
{% endblock %}

{% block content %}

    <h4>Afficher un copropriétaire :</h4>
    <h4>{{ coproprietaire.nom }}</h4>
    <ul>
        <li>{{ coproprietaire.email }}</li>
        <li>{{ coproprietaire.membreConseil }}</li>
        <li>...</li>
    </ul>
    <p><a href="{{ path('syndic_edit_coproprietaire', {'id' : coproprietaire.id}) }}">Modifier le copropriétaire</a></p>
    <p><a href="{{ path('syndic_delete_coproprietaire', {'id' : coproprietaire.id}) }}">Supprimer le copropriétaire</a></p>
{% endblock %}

{% block scripts %}
{% endblock %}
