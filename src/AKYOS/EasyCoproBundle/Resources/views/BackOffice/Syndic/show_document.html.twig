{% extends '@AKYOSEasyCopro/BackOffice/Syndic/layout.html.twig' %}

{% block title %}
    Affichage DOCUMENT
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block titre_page %}
    Affichage d'un document
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('syndic_index') }}">Dashboard</a></li>
    <li><a href="{{ path('syndic_gestion_documents') }}">Mes documents</a></li>
    <li class="active">{{ document.nom }}</li>
{% endblock %}

{% block content %}
    <p>
    {% for message in app.session.flashbag.get('info') %}
        <p>Message flash : {{ message }}</p>
    {% endfor %}
    </p>
    <h4> Document Visionné:</h4>
    <h4>{{ document.nom }}</h4>
    <ul>
        <li>Intitulé : {{ document.nom }}</li>
        <li>Description : {{ document.description }}</li>
        <li>Apercu fichier :
            <img src="{{ asset('documents/' ~ document.url) }}"><embed src="{{ asset('documents/' ~ document.url) }}" width="500" height="375" type='application/pdf'></li>
        <li>Catégorie : {{ document.categorie }}</li>
            <li><a href="{{ asset('documents/' ~ document.url) }}">Telecharger le fichier</a></li>
        <li>...</li>
    </ul>
    <p><a href="{{ path('syndic_edit_document', {'id' : document.id}) }}">Modifier le document</a></p>
    <p><a href="{{ path('syndic_delete_document', {'id' : document.id}) }}">Supprimer le document</a></p>
{% endblock %}

{% block scripts %}
{% endblock %}
