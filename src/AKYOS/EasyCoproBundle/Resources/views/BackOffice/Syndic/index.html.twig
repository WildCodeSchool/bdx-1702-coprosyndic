{% extends '@AKYOSEasyCopro/BackOffice/Syndic/layout.html.twig' %}

{% set userType = app.user.type %}

{% block title %}
    {{ userType }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/backoffice/syndic_dashboard.css') }}">

{% endblock %}

{% block titre_page %}
    Dashboard
{% endblock %}

{% block breadcrumb %}
    <li class="active">Dashboard</li>
{% endblock %}

{% block content %}

        <div class="col-sm-9">
            <div class="row">
                <div class="col-lg-3 col-sm-4 col-md-3 col-xs-6 stat-box">
                    <h4 class="text-center">COPROPRIETAIRES</h4>
                    <h1 class="text-center">{{ nbre_coproprietaires }}</h1>
                </div>
                <div class="col-lg-3 col-sm-4 col-md-3 col-xs-6 stat-box">
                    <h4 class="text-center">LOCATAIRES</h4>
                    <h1 class="text-center">{{ nbre_locataires }}</h1>
                </div>
                <div class="col-lg-3 col-sm-4 col-md-3 col-xs-6 stat-box">
                    <h4 class="text-center">ARTISANS</h4>
                    <h1 class="text-center">{{ artisans|length }}</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-3 right-menu">
            <div class="row">
                <div class=" widget-box">
                    <h4 class="text-center">ABONNEMENT</h4>

                </div>
            </div>
        </div>


    {% for message in app.session.flashbag.get('info') %}
        <p>Message flash : {{ message }}</p>
    {% endfor %}
    {% endblock %}

{% block scripts %}
{% endblock %}

