{% extends '@AKYOSEasyCopro/BackOffice/Syndic/layout.html.twig' %}

{% block title %}
    Gestion des locataires
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block titre_page %}
    Gestion des locataires
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('syndic_index') }}">Dashboard</a></li>
    <li class="active">Mes locataires</li>
{% endblock %}

{% block content %}

    <h4>Liste des locataires :</h4>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Raison sociale</th>
                <th>SIRET</th>
                <th>Email bureau</th>
            </tr>
        </thead>
        <tbody>
        {% for locataire in locataires %}
            <tr>
                <td><a href="{{ path('syndic_show_locataire', {'id': locataire.id}) }}">{{ locataire.id }}</a></td>
                <td>{{ locataire.nom }}</td>
                <td>{{ locataire.email }}</td>
                <td>{{ locataire.actuel }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block scripts %}
{% endblock %}
