{% extends '@AKYOSEasyCopro/BackOffice/Syndic/layout.html.twig' %}

{% block title %}
    Gestion des documents
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block titre_page %}
    Gestion des documents
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('syndic_index') }}">Dashboard</a></li>
    <li class="active">Gestion des documents</li>
{% endblock %}

{% block content %}
    <div class="row">

        <div class="col-md-3">
            <div class="row" style="background:#FFF; margin-bottom: 20px">
                <div class="col-md-12">
                    <a href="javascript:void(0)" class="btn btn-block btn-default visible-xs" data-toggle="collapse" data-target="#todo-options">Options</a>
                    <div id="todo-options" class="collapse navbar-collapse remove-padding">
                        <h4 class="inner-sidebar-header">Rechercher par catégorie</h4>
                        <div class="block-section">
                            <ul class="nav nav-pills nav-stacked">
                                <li class="active">
                                    <a href="javascript:void(0)">
                                        <span class="badge pull-right">{{ documentsCount }}</span>
                                        <strong>Toutes</strong>
                                    </a>
                                </li>
                                {% for categorie in categoriesCount %}
                                <li>
                                    <a href="javascript:void(0)">
                                        <span class="badge pull-right">{{ categorie[1] }}</span>
                                        <strong>{{ categorie['nom'] }}</strong>
                                    </a>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="background:#FFF">
                <div class="col-md-12">
                    <div id="todo-options" class="collapse navbar-collapse remove-padding">
                        <h4 class="inner-sidebar-header">Ajouter un fichier</h4>
                        <div class="block-section">
                            <div class="animation-fadeInQuick2">
                                <form action="<?= WWW; ?>/" method="post" class="form-horizontal" onsubmit="return false;">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <input type="file" class="filestyle" id="fileInput" tabindex="-1" style="position: absolute; clip: rect(0px 0px 0px 0px);">
                                            <div class="bootstrap-filestyle input-group"><input type="text" class="form-control " disabled="">
                                                <span class="group-span-filestyle input-group-btn" tabindex="0">
                                                <label for="fileInput" class="btn btn-info">
                                                    <span class="glyphicon fa fa-file-o"></span> Importer
                                                </label>
                                            </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <select id="example-select2" name="example-select2" class="select-select2" style="width: 100%;" data-placeholder="Choississez un type..">
                                                <option></option><!-- Required for data-placeholder attribute to work with Select2 plugin -->
                                                {% for categorie in categoriesCount %}
                                                <option value="categorie-{{ loop.index }}">{{ categorie.nom }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group form-actions">
                                        <div class="col-md-3">
                                            <input type="submit" class="btn btn-effect-ripple btn-primary" style="overflow: hidden; position: relative;" value="Ajouter">
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-md-9" id="coownerships-files">
            <div class="block-content-full animation-fadeInQuick2">
                <!-- Enable drop file to upload ( AJAX ) -->
                <form action="<? WWW; ?>/" class="dropzone dz-clickable">
                    <div class="table-responsive">
                        <table id="full-files-datatable" class="table table-striped table-borderless style-hover table-vcenter">
                            <thead>
                                <tr style="background:#EDEDED;">
                                    <th class="text-center" style="width: 25px; display:none">ID</th>
                                    <th>Nom du fichier</th>
                                    <th>Catégorie</th>
                                    <th style="width: 80px;">Ajouté le</th>
                                    <th class="text-center" style="width: 42px;"><i class="fa fa-flash"></i></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for document in documents %}
                                <tr>
                                    <td class="text-center" style="display:none">{{ document.id }}</td>
                                    <td style="padding-left:17px; "><a href=""><strong>{{ document.nom }}</strong></a></td>
                                    <td><span class="label label-{{ document.categorie }}" style="background-color: {{ document.categorie.couleur }}">{{ document.categorie }}</span></td>
                                    <td class="text-center">{{ document.dateAjout|date('d-m-Y') }}</td>
                                    <td class="text-center">
                                        <a href="javascript:void(0)" data-toggle="tooltip" title="Télécharger le fichier" class="btn btn-effect-ripple btn-xs btn-primary">
                                            <i class="fa fa-download"></i></a>
                                        <a href="javascript:void(0)" data-toggle="tooltip" title="Supprimer le fichier" class="btn btn-effect-ripple btn-xs btn-danger">
                                            <i class="fa fa-times"></i></a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>

    </div>
{% endblock %}

{% block scripts %}
{% endblock %}
