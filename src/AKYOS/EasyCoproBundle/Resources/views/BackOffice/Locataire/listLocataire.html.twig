{% block content %}
    <p>
    {% for message in app.session.flashbag.get('info') %}
        <p>Message flash : {{ message }}</p>
    {% endfor %}
    </p>
    <h4>Liste des Locataire :</h4>
    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Nom d'utilisateur</th>
            <th>Derni√®re connexion</th>
        </tr>
        </thead>
        <tbody>
        {% for locataire in locataires %}
            <tr>
                <td><a href="{{ path('locataire_showLocataire', {'id' : locataire.id}) }}">{{ locataire.id }}</a></td>
                <td>{{ locataire.nom }}</td>
                <td>{{ locataire.user.username }}</td>
                <td>{{ locataire.user.lastLogin|date('d/m/Y') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
