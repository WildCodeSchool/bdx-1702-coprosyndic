{% extends '@AKYOSEasyCopro/BackOffice/Locataire/layout.html.twig' %}

{% block title %}
    Affichage du profil
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block titre_page %}
    Affichage du profil
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('locataire_index') }}">Dashboard</a></li>
    <li class="active">Mon profil</li>
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-5 col-lg-4">
            <div class="widget">
                <div class="widget-content themed-background-danger clearfix">
                    <img src="{{ vich_uploader_asset(locataire.user, 'imageFile') }}" alt="avatar" class="img-circle img-thumbnail img-thumbnail-avatar pull-right">
                    <h2 class="widget-heading h3 text-light"><strong>{{ locataire.nom }}</strong></h2>
                    <span class="text-light-op">Locataire</span>
                </div>
                <div class="widget-content widget-content-mini themed-background-dark border-bottom">
                    <span class="pull-right text-light-op">Depuis le {{ app.user.dateInscription|date("m/d/Y") }}</span>
                    <i class="fa fa-archive text-light"></i><strong class="text-light"> &nbsp;{{ locataire.prenom }}</strong>
                </div>
                <div class="widget-content widget-content-full border-bottom">
                        <div class="col-xs-6 push-inner-top-bottom">
                            <h3 class="widget-heading"><i class="fa fa-envelope-o themed-color-social push"></i> <br>
                                <small>
                                    <strong>
                                        {% set nbmessages = locataire.user.messagesRecus|length %}
                                        {{ nbmessages }}
                                    </strong>
                                    {% if nbmessages > 1 %} Messages{% else %} Message
                                    {% endif %}
                                </small>
                            </h3>
                        </div>
                    </div>
                </div>
                {#<div class="widget-content border-bottom">#}
                {#<h4>Votre commentaire :</h4>#}
                {#<p>{{ coproprietaire.commentSyndic }}</p>#}
                {#</div>#}
            </div>
        </div>

    </div>

{% endblock %}

{% block scripts %}
{% endblock %}
