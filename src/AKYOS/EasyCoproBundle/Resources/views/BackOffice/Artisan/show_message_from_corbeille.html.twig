{% block content %}
    <div class="row">
        <!-- Message View -->
        <div id="message-view" class="block-section col-md-10 col-md-offset-1" style="background:#FFF">
            <!-- Title -->
            <div class="block-title clearfix" style="margin:0px -15px">
                <div class="block-options pull-right">
                    <a href="{{ path('artisan_revertMessage', {'id': message.id}) }}" class="btn btn-effect-ripple btn-info" data-toggle="tooltip" title="Renvoyer dans la boîte de réception"><i class="fa fa-inbox"></i></a>
                    <a href="{{ path('artisan_delete_message_corbeille', {'id': message.id}) }}" class="btn btn-effect-ripple btn-danger" data-toggle="tooltip" title="Supprimer définitivement"><i class="fa fa-times"></i></a>
                </div>
                <div class="block-options pull-left">
                    <a href="{{ path('artisan_corbeille') }}" class="btn btn-effect-ripple btn-default" id="message-view-back"><i class="fa fa-chevron-left"></i> Retour à la corbeille</a>
                </div>
            </div>
            <!-- END Title -->

            <!-- Header -->
            <h3><strong>{{ message.titre }}</strong>
                <small class="pull-right"><em>le {{ message.dateEnvoi|date('d/m/Y \\à h\\hi') }}</em></small></h3>
            <p>de <strong style="color: #45A7B9">{{ message.expediteur }}</strong></p>
            <!-- END Header -->

