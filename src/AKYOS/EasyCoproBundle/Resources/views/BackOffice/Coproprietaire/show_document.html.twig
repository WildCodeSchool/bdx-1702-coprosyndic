{% extends '@AKYOSEasyCopro/BackOffice/Coproprietaire/layout.html.twig' %}

{% block title %}
    Affichage DOCUMENT
{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block titre_page %}
    Affichage d'un document
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('coproprietaire_index') }}">Dashboard</a></li>
    <li><a href="{{ path('coproprietaire_gestion_documents') }}">Mes documents</a></li>
    <li class="active">{{ document.nom }}</li>
{% endblock %}

{% block content %}

    {% for message in app.session.flashbag.get('info') %}
        <p>Message flash : {{ message }}</p>
    {% endfor %}

    <div class="row">

        <div class="col-md-3">
            <div class="row" style="background:#FFF; margin-bottom: 20px">
                <div class="col-md-12">
                    <a href="javascript:void(0)" class="btn btn-block btn-default visible-xs" data-toggle="collapse" data-target="#todo-options">Options</a>
                    <div id="todo-options" class="collapse navbar-collapse remove-padding">
                        <h4 class="inner-sidebar-header">Informations</h4>
                        <div class="block-section">
                            <h5>Titre :</h5><p>{{ document.nom }}</p>
                            <h5>Description :</h5><p>{{ document.description }}</p>
                            <h5>Date d'ajout :</h5><p>{{ document.dateAjout|date('d/m/Y') }}</p>
                            <h5>Date de modification :</h5><p>{{ document.dateModif|date('d/m/Y') }}</p>
                            <h5>Catégorie :</h5><p>{{ document.categorie }}</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row" style="background:#FFF;  margin-bottom: 20px">
                <div class="col-md-12">
                    <div id="todo-options" class="collapse navbar-collapse remove-padding">
                        <h4 class="inner-sidebar-header">Actions</h4>
                        <div class="block-section">
                            <ul>
                                <li><a href="{{ asset('documents/' ~ document.url) }}" download="{{ document.nom~'.'~document.extension }}">Télécharger le fichier</a></li>
                                {#<li><a href="{{ path('syndic_edit_document', {'id' : document.id}) }}">Modifier le document</a></li>#}
                                {#<li><a href="{{ path('syndic_delete_document', {'id' : document.id}) }}">Supprimer le document</a></li>#}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row" style="background:#FFF">
                <div class="col-md-12">
                    <div id="todo-options" class="collapse navbar-collapse remove-padding">
                        <h4 class="inner-sidebar-header">Liste de diffusion</h4>
                        <div class="block-section">
                            <ul>
                                {% for lot in document.lots %}
                                    <li>{{ lot.identifiant }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-md-9">
            <div class="block-content-full">
                {% if document.extension in ['bmp','jpg', 'jpeg', 'png', 'gif', 'tiff'] %}
                    <img src="{{ asset('documents/' ~ document.url) }}">
                {% elseif document.extension == 'pdf' %}
                    <embed src="{{ asset('documents/' ~ document.url) }}" width="100%" height="600px" type='application/pdf'></embed>
                {% else %}
                    <p>L'aperçu du document n'est pas disponible pour ce type de fichier.</p>
                {% endif %}
            </div>
        </div>

    </div>
{% endblock %}

{% block scripts %}
{% endblock %}

