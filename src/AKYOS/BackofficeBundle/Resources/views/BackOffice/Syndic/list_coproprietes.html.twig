{% extends '@AKYOSBackoffice/BackOffice/Syndic/layout.html.twig' %}

{% block title %}
    Gestion des copropriétés
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/backoffice/css/syndic_dashboard.css') }}"
          xmlns="http://www.w3.org/1999/html">
{% endblock %}

{% block titre_page %}
    Gestion des copropriétés
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('syndic_index') }}">Tableau de bord</a></li>
    <li class="active">Mes copropriétés</li>
{% endblock %}

{% block content %}

<div class="row">
    {% for copropriete in coproprietes %}
    <div class="col-md-4">
        <div class="widget">
            <div class="widget-image widget-image-xs">
                <img src="{{ vich_uploader_asset(copropriete, 'illustrationFile') }}">
                <div class="widget-image-content">
                    <a href="{{ path('syndic_show_copropriete', {'id':copropriete.id}) }}">
                        <h2 class="widget-heading text-light"><strong>{{ copropriete.nom }}</strong></h2>
                    </a>
                    <h3 class="widget-heading text-light-op h4">{{ copropriete.adressePrinc }}</h3>
                </div>
            </div>
            <div class="widget-content">
                <div class="row text-center">
                    <div class="col-xs-6">
                        <h4 class="widget-heading"><i class="fa fa-folder fa-lg themed-color-social push"></i><br>
                            <small><strong>DOCUMENTS</strong></small><br>
                            <a href="javascript:void(0)"><strong>{{ counts[loop.index0].nbDocuments }}</strong></a>
                        </h4>
                    </div>
                    <div class="col-xs-6">
                        <h4 class="widget-heading"><i class="fa fa-users fa-lg themed-color-social push"></i><br>
                            <small><strong>COPROPRIÉTAIRES</strong></small><br>
                            <a href="javascript:void(0)" class="themed-color-flat"><strong>{{ counts[loop.index0].nbCoproprietaires }}</strong></a></h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}

{% block scripts %}
    {{ parent() }}
{% endblock %}
