<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 class="modal-title"><strong>Ajouter un document</strong></h3>
</div>

<div class="modal-body">
    {{ form_start(form_document, {'attr': {'class': 'form-horizontal', 'action': path('syndic_create_document') }}) }}

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-7" style="margin-right:30px">
                <div class="form-group">
                    {{ form_row(form_document.titre, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    {{ form_row(form_document.categorie, {'attr': {'class':'select-select2', 'style':'width: 100%;'}}) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_row(form_document.description, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_row(form_document.fichier, {'attr':{'class':'filestyle inputfile','style':'position: absolute; clip: rect(0px 0px 0px 0px);','tabindex':'-1'}}) }}
                    <div class="bootstrap-filestyle input-group">
                        <input type="text" id="filename-box" class="form-control" disabled="">
                        <span class="group-span-filestyle input-group-btn" tabindex="0">
                            <label for="create_document_fichier" class="btn btn-info">
                                <span class="glyphicon fa fa-file-o"></span> Importer
                            </label>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-5" style="margin-right:30px">
                <div class="form-group">
                    {{ form_row(form_document.copropriete, {'attr': {'class':'select-select2 choix-copropriete', 'style':'width: 100%;'}}) }}
                </div>
            </div>
            <input type="checkbox" id="checkbox-all" >Select All
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_row(form_document.lots, {'attr': {'class':'select-select2', 'style':'width: 100%;'}}) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12">
                <div class="form-group">
                    {{ form_label(form_document.toLocataires) }}
                    <label class="switch switch-warning">
                        {{ form_widget(form_document.toLocataires) }}<span></span>
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal-footer">
    <div class="col-md-12">
        <div class="form-group pull-right">
            {{ form_widget(form_document.submit, {'attr': {'class': 'btn btn-effect-ripple btn-primary'}}) }}
            <button type="button" class="btn btn-effect-ripple btn-danger" data-dismiss="modal" style="margin-left: 20px;">Annuler</button>
        </div>
    </div>
</div>

{{ form_rest(form_document) }}
{{ form_end(form_document) }}